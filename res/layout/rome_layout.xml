<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cal_rome"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/year_label"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/rome_year_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/input_hint_rome" >
            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/std_year_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/input_hint_std" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/I_button"
            android:width="40dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/I" />

        <Button
            android:id="@+id/V_button"
            android:width="40dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/V" />

        <Button
            android:id="@+id/X_button"
            android:width="40dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/X" />

        <Button
            android:id="@+id/L_button"
            android:width="40dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/L" />

        <Button
            android:id="@+id/C_button"
            android:width="40dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/C" />

        <Button
            android:id="@+id/D_button"
            android:width="40dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/D" />

        <Button
            android:id="@+id/M_button"
            android:width="40dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/M" />

        <Button
            android:id="@+id/back_button"
            android:width="50dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/backspace" />

    </LinearLayout>

    <TextView
        android:id="@+id/std_year_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_label"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/rome_day_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/input_hint_rome" />

        <EditText
            android:id="@+id/std_day_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/input_hint_std"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="131dp" >

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/roman_prefix" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/roman_beacons" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/roman_months" />

    </LinearLayout>

</TableLayout>
